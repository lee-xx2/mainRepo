/* pages/goods_detail/goods_detail.wxss */
page{
  padding-bottom: 90rpx;
  /* 防止页面底部被工具栏挡住 */
}
.detail_swiper swiper{
  height:80vw;
  background-color: rgba(52, 136, 153, 0.1);
  text-align: center;
}
.detail_swiper swiper image{
  width:90%;
  height: 90%;

  display: block;
  margin: 15rpx auto;
}

.prices{
  display: flex;
}

.goods_price{
  padding: 15rpx;
  color: #348899;
  font-size: 48rpx;
  font-weight: 600;
}

.original_price,.bulletin_date{
  padding: 0 15rpx;
  color: #838686;
  font-size: 28rpx;
  font-weight: 300;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods_name_row{
  display: flex;
}

.goods_name{
  /* flex:4;=> 4/5 */
  flex:4;
  color: #000;
  font-size: 42rpx;
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.goods_collect{
  flex: 1;
  display: flex;
  font-size: 32rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #348899;
}

.sell_spec_title{
  padding: 15rpx ;
  color: #348899;
  font-size: 42rpx;
  font-weight: 600;
}

.sell_spec{
  padding:0 15rpx;
  font-size: 35rpx;
  color: #6b6969;
}

.btm_tool{
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(52, 136, 153, 0.1);
  width: 100%;
  display: flex;
}
.whiteSpace{
  flex:3;
  color:#348899;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.btm_tool_item{
  flex:3;
  color: #fff;
  background-color: #348899;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 0;
  position: relative;
}
button{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.iconfont{
  margin-right: 10rpx;
}
