.user_info_wrap{
  height: 25vh;
  background-color: #348899;
  position: relative;
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  color: #fff;
}
.info_setting{
  margin-left:  625rpx;
  margin-top: -180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 2;
}
.setting_img{
  width: 25px;
  height: 25px;
}
.scan{
  margin-left: 625rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 2;
}
.scan_img{
  width: 25px;
  height: 25px;
}
.user_btn{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
}

.tabs_title{
  display: flex;
}
.title_item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding: 15rpx 0;
}
.active{
  color: #348899;
  border-bottom: 5rpx solid currentColor;
}
.goods_item{
  display: flex;
  border: 1px solid #fff;
  border-radius: 8px;
  height: 80px;
  margin: 20px;
  background-color: #fff;
}
.goods_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_img{
  width: 50px;
  height: 50px;
}
.goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
}
.goods_sort{
  font-size: 25rpx;
  color: #808080;
}
.noPublish{
  margin-top: 20%;
  margin-left: 30%;
  color: #808080;
}
.noTrade{
  margin-top: 20%;
  margin-left: 30%;
  color: #808080;
}