page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

  
}

.search_input{
  height:60rpx;
  padding: 15rpx;
  background-color: #348899; 
}

.search_input navigator{
    height:100%;
    display:flex;
    justify-content:center;
    align-items:center;
    background:#fff;
    border-radius: 15rpx;
    color:#666;
  }

  .swiperCon{
    height:340rpx;
  }
  .swiperCon image{
    width: 100%;
    height: 100%;
  }

  .icon-search{
    margin-right: 20rpx;
  }

  /*  scroll-view组件实现滚动*/
  .scroll_set{
    position: relative;
  }
  .scroll_view{
    height: 80rpx;
    line-height: 75rpx;
    background-color: #348899;
    font-size: 32rpx;
    font-family: '微软雅黑';
    color:#fff;
    padding:0;
   border-bottom: rgb(168, 168, 168) 0rpx solid;
  }
  .scroll_view view{
    display: inline-block;
    padding-left: 23rpx;
    padding-right: 23rpx;
  }
  .select{
    font-weight:bold;
    border-bottom: 6rpx solid #3a6479;
  }  
  



  /* 展示商品相关样式 */
  .templateShow{
    border-bottom: 1rpx solid #858484;
    padding: 10rpx 24.4rpx;
    margin:5rpx 15rpx;
    font-size: 30rpx;
   
  }
  .user{ 
    display:flex;
  }
  .user .touxiang{
    width:100rpx;
    height:90rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  .user .maifangname{
    padding-top:12rpx;
    font-size: 32rpx;
    margin-bottom: 15rpx;
    width: 100%;
    color:#348899;
  }

  .templateShow .shangpinneirong{
    margin-top:-20rpx;
    margin-left: 100rpx;
    display: flex;
    flex-wrap: wrap;
    
  }
  .templateShow .shangpinneirong .goodsImg{
    display: flex;  
    flex-wrap: wrap;
  }
  .templateShow .shangpinneirong .goodsImg image{
      height: 150rpx ;
      width: 150rpx;
      margin: 20rpx 10rpx;
  }
  .templateShow .box{
    display: flex;
    flex-direction:column;
    flex-wrap: wrap;
    font-size: 24rpx;
  }
  .templateShow .box .type{
    margin-bottom: 8rpx;
    color:#348899;
  }
  .weizhi{
   width:24rpx;
   height: 24rpx;
  }
  .templateShow  .schoolArea{
   
    font-size: 24rpx;
    padding-left: 400rpx;  
    margin-top:-36rpx;
  }

  .end{
    height:100rpx;
    font-size:28rpx;
    line-height: 100rpx;
    text-align: center;
    color:#666;

  }