/**index.wxss**/
.scroll-view_H {
  height: 40px;
  display: flex;
  flex-direction: row;
  margin-left: 0px;
  
}

.select {
  width: 70px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
  color:#348899;
}

.normal {
  width: 70px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
}
.swiper-item{
  background-color: #F5F5F5;
}
.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list{
  margin-top:10px;
}
 
.list .list_item{
  margin-top:10px;
  padding:10px;
  height:100px;
  border-bottom:1px solid #E8E8E8;
}
.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:59%;
  float:right;
  height:100px;
  position:relative;
}
.list .list_item .info .name{
  color:#000;
  margin-left:10px;
  font-size: 15px;
}
 
.list .list_item .info .price{
  color:#348899;
  margin-left:10px;
  margin-top:10px;
  font-size:16px;
}
 
.list .list_item .info .num{
  position: absolute;
  left:0px;
  bottom:10px;
  color:#747474;
  margin-left:10px;
  font-size:15px;
}

.personalMe{
  height:250rpx;
  background-color:#348899;
}
.personalInfo{
  float:left;
  margin: 20rpx 0rpx 0rpx 20rpx;
}
.personalInfo wx-text{
  display: block;
  line-height:70rpx;
  height:70rpx;
}
.personalList{
  background-color: #fff;

}
.personalList view{
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: block;
  line-height:90rpx;
  height:90rpx;
  border-bottom:1px solid #ddd;
}

.getLocBtn{
  color:#000000;
  background-color:#fff;
  padding: 15rpx 20rpx;
  border-radius: 15rpx;
  margin-top: 20rpx;
  border:4rpx solid rgba(52, 136, 153, 0.1);
}

.getLocBtn button{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
